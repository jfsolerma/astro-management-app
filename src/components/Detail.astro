---
const { title, body, img, descImg, items } = Astro.props;
---

<button class="button-card">
  <h3>{title}</h3>
  <img src={img} alt={descImg} class="cover" />
  <p>Cantidad: <span>{items}</span></p>
</button>



<style>
  @media only screen and (max-width: 520px) {
    .cover {
      width: 70px;
      height: 70px;
    }
    .button-card {
      width: 100%;
      height: 100%;
    }
  }
  @media only screen and (min-width: 520px) {
    .cover {
      width: 90px;
      height: 90px;
    }
    .button-card {
      width: 100%;
    }
  }

  .button-card h3 {
    margin: 0;
    margin-top: 5px;
    font-size: 1.25rem;
    overflow: hidden;
    color: #ffffff;
    height: 20px;
  }
  .button-card p {
    margin-top: 0.5rem;
    margin-bottom: 5px;
    color: #ffffff;
    overflow: hidden;
    height: 20px;
  }

  .cover {
    display: block;
    object-fit: cover;
  }

  .button-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius: 10px;
    background: none;
    padding: 0;
    margin: 0;
    width: 100%;
    text-align: center;
    background: linear-gradient(180deg, #2f2f2f, #3f3f3f);
    box-shadow: inset -8px 0 8px rgb(0 0 0 / 15%),
      inset 0 -8px 8px rgb(0 0 0 / 25%), 0 0 0 2px rgb(0 0 0 / 75%),
      5px 10px 15px rgb(0 0 0 / 40%);
    user-select: none;
    cursor: pointer;
    font-weight: 400;
  }
  .button-card:active {
    box-shadow: 0 1px #666;
    transform: translateY(4px);
  }
</style>
