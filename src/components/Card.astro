---
import Detail from "./Detail.astro";

const { title, body, img, descImg, items } = Astro.props;
---

<li class="link-card">
  <section>
    <article>
      <Detail {img} {descImg} {title} {body} {items} />
    </article>
    <article class="calculator">
      <button
        class="button-cal"
        style="
	  background: linear-gradient(90deg, #00ff00, #00aa00);"
        >+1</button
      >
      <button
        class="button-cal"
        style="
	  background: linear-gradient(90deg, #00aa00, #009900);"
        >+5</button
      >
      <button
        class="button-cal"
        style="
	  background: linear-gradient(90deg, #009900, #007700);"
        >+10</button
      >
      <button
        class="button-cal"
        style="
	  background: linear-gradient(90deg, #007700, #005500);"
        >+20</button
      >
      <button
        class="button-cal"
        style="
	  background: linear-gradient(90deg, #ff0000, #aa0000);"
        >-1</button
      >
      <button
        class="button-cal"
        style="
	  background: linear-gradient(90deg, #aa0000, #990000);"
        >-5</button
      >
      <button
        class="button-cal"
        style="
	  background: linear-gradient(90deg, #990000, #770000);"
        >-10</button
      >
      <button
        class="button-cal"
        style="
	  background: linear-gradient(90deg, #770000, #550000);"
        >-20</button
      >
    </article>
  </section>
</li>

<style>
  @media only screen and (max-width: 520px) {
    .link-card {
      width: 120px;
      height: 120px;
      margin: 2px;
	  margin-top: 15px;

    }
    .calculator {
      display: none;
    }

  }
  @media only screen and (min-width: 520px) {
    .link-card {
		
		margin: 1px;
		width: 300px;
		height: 300px;
		background-color: #222222;
		border-radius: 10px;
		border-color: #000000;
		border-style: solid;
    }
	.calculator {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		align-items: center;
  	}
  }
  
  .button-cal {
    color: aliceblue;
    border-radius: 10px;
    border-style: solid;
    width: 69px;
    height: 69px;
    box-shadow: inset -8px 0 8px rgb(0 0 0 / 15%),
      inset 0 -8px 8px rgb(0 0 0 / 25%), 0 0 0 2px rgb(0 0 0 / 75%),
      5px 10px 15px rgb(0 0 0 / 40%);
    margin: 2px auto;
  }
  .button-cal:active {
    box-shadow: 0 2px #666;
    transform: translateY(4px);
  }
  .link-card {
    display: inline-block;
  }
</style>
